---
import CapabilitiesTile from "./CapabilitiesTile.astro";
---
<div class="teal-medium">
    <div class="container">
        <div class="grid">
            <CapabilitiesTile
                title="Large Format & Digital Printing"
                description="Banners, posters, wraps, and decals that make your message impossible to miss."
                link="/capabilities#large-format-printing"
            /><CapabilitiesTile
                title="online solutions & fulfillment"
                description="Web-to-print storefronts and fulfillment services that make reordering simple and stress-free."
                link="/capabilities#online-solutions"
            /><CapabilitiesTile
                title="wall coverings & graphics"
                description="Custom murals and graphics that turn blank space into branded space."
                link="/capabilities#graphics-wall-coverings"
            /><CapabilitiesTile
                title="window decals & signage"
                description="Static clings, vinyl lettering, and signage â€” the bread and butter of storefront branding."
                link="/capabilities#signage"
            /><CapabilitiesTile
                title="trade show & wayfinding displays"
                description="Displays and signage that help you stand out and keep people moving in the right direction."
                link="/capabilities#trade-show"
            /><CapabilitiesTile
                title="design services"
                description="File prep, layouts, and design support that make sure your project is production-ready."
                link="/capabilities#design"
            />
        </div>
    </div>
</div>
<style>
    div.teal-medium {
        background-color: var(--teal-medium);
    }
    @media (min-width: 768px) {
        div.grid {
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr; /* 3 equal columns */
        }
    }
</style>

---
import Layout from "../layouts/Layout.astro";
import Billboard from "../components/billboard.astro";
import Button from "../components/Button.astro";

---
<Layout title="About">
    <Billboard background="https://plus.unsplash.com/premium_photo-1675355675326-0bdc971f2558?q=80&w=774&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
